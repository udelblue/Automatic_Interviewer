<% include ../partials/_header.ejs %>
  <body class="">
    <div class="page">
      <div class="page-main">
    
      
        <% include ../partials/_topbar.ejs %>
        <% include ../partials/_navbar.ejs %>
        <div class="my-3 my-md-5">
          <div class="container">
              <% include ../partials/_messages.ejs %>
              <div class="row row-card">
                 
                      <div class="card">
                        <div class="card-header">
                          <h3 class="card-title">Interview</h3>
                          <div class="card-options">
                            
                           
                          </div>
                        </div>
                        <div class="card-body">
                            <% if(interview) { %>  
                            <h4 class="m-0">   <%= interview.name %> </h4>
                            <p class="text-muted mb-0">Update: <%= interview.updated.toLocaleString() %></p>
                        
                            <% }%>
                      </div>
                      </div>
                
                </div>



          <div class="row row-card">
              <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">Candidate Responses</h3>
                  </div>  
            <div class="table-responsive">
              <table class="table card-table table-vcenter text-nowrap">
                <thead>
                  <tr>
              
                    <th>Date </th>
                    <th>Candidate Name</th>
                    <th>Candidate Email</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% responses.forEach(function(rc) { %>
                    <% if(rc) { %>
                    <tr>
                      
                        <td><%= rc.updated %> </td>
                        <td>Name </td>
                        <td>Email </td>
                        <td><a  href='./<%= rc.interviewID %>/<%= rc.candidateID %>'  class="btn btn-sm btn-outline-secondary btn-link " role="button" >View Responses</a></td>
                     
                      </tr>
                    <% }%>
                    <% }); %>
            
                </tbody>
              </table>
            </div>
          

        </div>
      </div>
    </div>
      </div>

        </div>
      </div>
   
      <% include ../partials/_footer.ejs %>
    </div>
  </body>
</html>