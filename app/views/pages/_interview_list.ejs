          <div class="col-12">
              <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">Interviews</h3>
                    <div class="card-options">
                        <a href="/interview/create" class="btn btn-primary btn-sm">Create</a>
                    </div>
                  </div>
           
            <div class="table-responsive">
              <table class="table card-table table-vcenter text-nowrap">
                <thead>
                  <tr>
                      <th class="w-1">No.</th>
                      <th>Title</th>
                      <th>Created</th>
                      <th>Status</th>
               
                    <th></th>
                  
                    <th></th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                    <% if(interviews && interviews.length > 0) { %>
                    
                    <% interviews.forEach(function(interview) { %>
                    
                      <tr>
                          <td> <%= interview._id %></td>
                          <td> <%= interview.name %></td>
                          <td> <%= moment().format("dddd, MMMM Do YYYY") %> </td>
                          <td>
                              <span class="status-icon bg-success"></span> Active
                            </td>
    
                          <td><a href='/interview/invite/<%= interview._id %>'  class="btn btn-secondary btn-sm  " role="button">Invite Candidates</a></td>
                          <td><a href='/response/interview/<%= interview._id %>'  class="btn btn-secondary btn-sm " role="button">Candidate Responses</a></td>
                          <td>
                          <a class="icon" href="/interview/edit/<%= interview._id %>">
                              <i class="fe fe-edit"></i>
                            </a>
                          </td>
                        </tr>
                      <% }); %>
            
                      <% }; %>

                </tbody>
              </table>
            </div>
